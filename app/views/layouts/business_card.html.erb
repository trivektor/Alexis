<!DOCTYPE html>
<html>
<head>
  <title><%= @title_for_layout %> - Alexis</title>
  <meta name="description" content="<%= @business_card.title %>" />
  <%= stylesheet_link_tag ['business_card', "themes/#{@theme.slug}"] %>
  <%= javascript_include_tag [
    'jquery',
    'jquery.hoverIntent',
    'business_card',
  ] %>
  <%= csrf_meta_tag %>
  
  <% if @body_id == 'show_business_card' %>
  <style>
    body {
      <% if (@business_card.business_card_background.which == 'color') %>
        background:#<%= @business_card.business_card_background.background_color %>;
      <% end %>
    }
  </style>
  <% end %>
</head>
<body id="<%= @body_id %>">

<%= yield %>

</body>
</html>
